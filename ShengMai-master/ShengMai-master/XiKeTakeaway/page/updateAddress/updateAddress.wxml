<form bindsubmit="formSubmit">
  <view class="people">
    联系人
  </view>
  <view class="message">
    <view>
      <text>姓名</text><input name="customername" placeholder="请填写收货人姓名" value="{{modifyAddress.customername}}" bindinput="setName" placeholder-style="font-size:40rpx;color:#999;"/>
    </view>
    <view>
      <text></text>
      <view class="choose">
        <radio-group name="sex">
          <label><radio value="先生" color="#ffe400" checked/>先生</label>
          <label><radio value="女士" color="#ffe400"/>女士</label>
        </radio-group> 
      </view>
    </view>
    <view>
      <text>手机</text><input name="phone" placeholder="请填写收货人手机号码" value="{{modifyAddress.phone}}" bindinput="setPhone" type="number" placeholder-style="font-size:40rpx;color:#999;"/>
    </view>
  </view>

  <view class="people">
    收货地址
  </view>

  <view class="message2">
    <view class="iconfont icon-more" bindtap="getAddress">
      <text class="width">小区/大厦/学校</text>
      <view class="map">
        <text class="iconfont icon-map"></text>
        <!-- <view class="width2"> {{city}}</view> -->
        <input name="city" class="width2" value="{{city}}" disabled/>
      </view>
    </view>
    <view>
      <text class="width">楼号-门牌号</text>
      <input class="width2" name="cityDetail" placeholder="例：16号楼427室" bindinput="setCityDetail" value="{{cityDetail}}" placeholder-style="font-size:40rpx;color:#999;"/>
    </view>
  </view>
  <!-- <view class="save" bindtap="saveAddress">
    保存
  </view> -->
  <button class="save" formType="submit">保存</button>
  <button class="reset" formType="reset">清空</button>
</form>


